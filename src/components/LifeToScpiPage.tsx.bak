import React, { useState } from 'react';

interface SimulationInputs {
  montantActuel: number;
  ancienneteContrat: number;
  horizon: number;
  tmi: number;
  rendementFondsEuros: number;
  rendementScpi: number;
  inflation: number;
  tauxCredit: number;
  dureeCredit: number;
  pctArbitrage: number;
  pctRachat: number;
  montantCredit: number;
}

interface ScenarioResult {
  id: string;
  titre: string;
  capitalFinal: number;
  revenusAnnuels: number;
  risque: string;
  complexite: string;
  liquidite: string;
  details: string;
}

function projectFondsEuros(
  montantInitial: number,
  rendement: number,
  horizon: number
): number {
  return montantInitial * Math.pow(1 + rendement / 100, horizon);
}

function projectScpiUc(
  montantInitial: number,
  pctArbitrage: number,
  rendementFE: number,
  rendementScpi: number,
  horizon: number
): { capitalFinal: number; revenusAnnuels: number } {
  const montantFE = montantInitial * (1 - pctArbitrage / 100);
  const montantScpi = montantInitial * (pctArbitrage / 100);

  const capitalFE = montantFE * Math.pow(1 + rendementFE / 100, horizon);
  const capitalScpi = montantScpi * Math.pow(1 + rendementScpi / 100, horizon);

  const revenusAnnuels = capitalScpi * (rendementScpi / 100);

  return {
    capitalFinal: capitalFE + capitalScpi,
    revenusAnnuels
  };
}

function projectScpiDirect(
  montantInitial: number,
  pctRachat: number,
  rendementFE: number,
  rendementScpi: number,
  horizon: number,
  tmi: number
): { capitalFinal: number; revenusAnnuelsBruts: number; revenusAnnuelsNets: number } {
  const montantFE = montantInitial * (1 - pctRachat / 100);
  const montantScpiDirect = montantInitial * (pctRachat / 100);

  const capitalFE = montantFE * Math.pow(1 + rendementFE / 100, horizon);
  const capitalScpi = montantScpiDirect * Math.pow(1 + rendementScpi / 100, horizon);

  const revenusAnnuelsBruts = capitalScpi * (rendementScpi / 100);
  const tauxFiscalTotal = (tmi + 17.2) / 100;
  const revenusAnnuelsNets = revenusAnnuelsBruts * (1 - tauxFiscalTotal);

  return {
    capitalFinal: capitalFE + capitalScpi,
    revenusAnnuelsBruts,
    revenusAnnuelsNets
  };
}

function projectScpiCredit(
  montantCredit: number,
  tauxCredit: number,
  dureeCredit: number,
  rendementScpi: number,
  horizon: number
): {
  capitalFinal: number;
  revenusAnnuels: number;
  mensualite: number;
  totalInterets: number;
  cashFlowAnnuel: number;
} {
  const tauxMensuel = tauxCredit / 100 / 12;
  const nbMois = dureeCredit * 12;
  const mensualite = montantCredit *
    (tauxMensuel * Math.pow(1 + tauxMensuel, nbMois)) /
    (Math.pow(1 + tauxMensuel, nbMois) - 1);

  const totalInterets = (mensualite * nbMois) - montantCredit;
  const capitalFinal = montantCredit * Math.pow(1 + rendementScpi / 100, horizon);
  const revenusAnnuels = montantCredit * (rendementScpi / 100);
  const annuiteCredit = mensualite * 12;
  const cashFlowAnnuel = revenusAnnuels - annuiteCredit;

  return {
    capitalFinal,
    revenusAnnuels,
    mensualite,
    totalInterets,
    cashFlowAnnuel
  };
}

